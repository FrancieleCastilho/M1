<?xml version="1.0"?>
<config>
    <global>
        <modules>
            <academia_helloworld>
                <version>1.0.0</version>
            </academia_helloworld>
        </modules>
        <blocks>
            <academia_helloworld>
                <class>Academia_HelloWorld_Block</class>
            </academia_helloworld>
        </blocks>

    </global>
    <frontend>
        <routers>
            <helloworldacademia>
                <use>standard</use>
                <args>
                    <module>Academia_HelloWorld</module>
                    <frontName>helloworldacademia</frontName>
                </args>
            </helloworldacademia>
        </routers>
    </frontend>
</config>



        